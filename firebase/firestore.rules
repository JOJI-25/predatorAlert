rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // DETECTION LOGS
    // ========================================
    // - Backend (Admin SDK): Full read/write
    // - Authenticated users: Read-only
    // - Unauthenticated: No access
    
    match /detections/{detectionId} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Only backend (Admin SDK) can write
      // Admin SDK bypasses these rules entirely
      allow write: if false;
    }
    
    // ========================================
    // ALERT CONFIGURATION
    // ========================================
    // - Backend (Admin SDK): Full read/write
    // - Authenticated users: Read-only
    // - Admin users: Write access
    
    match /alert_config/{configId} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write only for admin users
      allow write: if request.auth != null 
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // ========================================
    // USER PROFILES
    // ========================================
    // - Users can read/write their own profile
    // - Admin can read all profiles
    
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow admin to read all profiles
      allow read: if request.auth != null 
                  && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Allow users to update their own profile (except isAdmin field)
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin']);
      
      // Only backend can create user profiles
      allow create: if false;
    }
    
    // ========================================
    // REGISTERED DEVICES
    // ========================================
    // - Backend only (for reference)
    
    match /devices/{deviceId} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Only backend can write
      allow write: if false;
    }
    
    // ========================================
    // FCM TOKENS
    // ========================================
    // - Users can manage their own tokens
    
    match /fcm_tokens/{tokenId} {
      allow read, write: if request.auth != null 
                         && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.userId;
    }
    
    // ========================================
    // CHATS (for messaging between users)
    // ========================================
    // - Authenticated users can read/write chats they are part of
    
    match /chats/{chatId} {
      // Allow read/write if user is a participant
      allow read, write: if request.auth != null;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user is authenticated
        allow read: if request.auth != null;
        
        // Allow write if user is the sender
        allow create: if request.auth != null 
                      && request.auth.uid == request.resource.data.senderId;
        
        // Allow update for marking as read
        allow update: if request.auth != null 
                      && request.auth.uid == resource.data.receiverId;
      }
    }
    
    // ========================================
    // USER PROFILES (read all for contacts)
    // ========================================
    // Additional rule: Allow authenticated users to read all user profiles
    // (needed for contacts list)
    
    match /users/{userId} {
      allow read: if request.auth != null;
      
      // Allow users to create and update their own profile
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId;
    }
    
    // ========================================
    // DEFAULT: DENY ALL
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
